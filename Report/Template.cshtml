<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="@Model.BootstrapLibraryPath">
        <link rel="icon" href="@Model.SpecFlowIconPath">
        <title>Step Definition Reporter</title>
        <style>
            .report-text-small {
                font-size: 14px;
            }

            .element-hidden {
                display: none;
            }

            table.table-bordered {
                border-color: black;
            }

            table.table-bordered > thead > tr > th {
                border-color:  black;
            }

            table.table-bordered > tbody > tr > td {
                border-color: black;
            }

            body {
                padding: 10px;
            }
            
            .button-link {
                color: #0000ff;
                cursor: pointer;
                text-decoration: underline;
            }
        </style>
        <script>
            function toggleDetails(stepId) {
                const button = document.getElementById('btn-' + stepId);
                const list = document.getElementById('list-' + stepId);

                button.innerText = button.innerText === '[Show]' ? '[Hide]' : '[Show]'; 
                list.classList.toggle('element-hidden');
            }
        </script>
    </head>
    <body class="bg-light">
        <h3>
            Step Definition Report @(!string.IsNullOrEmpty(Model.ProjectName) ? $"- {@Model.ProjectName}" : null)
        </h3>

        <h6>
            <span class="text-success">Total steps: @Model.TotalNumberOfSteps</span>
            <span class="text-danger">Unused steps: @Model.TotalNumberOfUnusedSteps</span>
        </h6>

        <div class="mb-3">
            Generated by SpecFlow at @Model.GeneratedDateTime (see <a target="_blank" href="http://www.specflow.org/">http://www.specflow.org/</a>).
        </div>

        @foreach (var groupedSteps in @Model.Results)
        {
            <h4 class="text-info">
                @(groupedSteps.Type)
            </h4>

            <table class="table table-bordered table-hover">
                <caption>
                    <span class="text-success">
                        Total steps: @groupedSteps.TotalNumberSteps
                    </span>
                    <span class="text-danger">
                        Unused steps: @groupedSteps.NumberOfUnusedSteps
                    </span>
                </caption>
                <thead>
                    <th class="report-text-small">
                        Step Definition
                    </th>
                    <th class="report-text-small">
                        Instances
                    </th>
                </thead>
                <tbody>
                    @foreach (var stepInfo in groupedSteps.Attributes)
                    {
                        <tr class="@(stepInfo.NumberOfCalls == 0 ? "table-danger" : null)">
                            <td class="report-text-small">
                                @(stepInfo.Value)
                                @if (stepInfo.NumberOfCalls != 0)
                                {
                                    <button type="button" class="btn btn-link btn-sm" id="btn-@(stepInfo.StepId)" onclick="toggleDetails('@(stepInfo.StepId)')">[Show]</button>
                                    <ul id="list-@(stepInfo.StepId)" class="element-hidden">
                                        @foreach (var generatedStepDefinition in stepInfo.GeneratedStepDefinitions)
                                        {
                                            <li>@(generatedStepDefinition.StepName) / 
                                                @if (generatedStepDefinition.FeatureFilePath != null)
                                                {
                                                    <a target="_blank" href="@(generatedStepDefinition.FeatureFilePath)">@(generatedStepDefinition.FeatureFileName)</a>
                                                }
                                                else
                                                {
                                                    <span class="button-link">@(generatedStepDefinition.FeatureFileName)</span>
                                                }
                                            </li>
                                        }
                                    </ul>                            
                                }
                            </td>
                            <td class="report-text-small">
                                @(stepInfo.NumberOfCalls)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </body>
</html>